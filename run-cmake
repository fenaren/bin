#!/bin/bash

function displayhelp {
    echo "$0 [ --debug | --release ] [ --static | --shared ] [ --help ]"
}

DEBUG_SET=false
RELEASE_SET=false
STATIC_SET=false
SHARED_SET=false

while [ -n "$1" ]
do
    case "$1" in
        -d | --debug)
            DEBUG_SET=true
            RELEASE_SET=false
            ;;

        -h | --help)
            displayhelp
            exit
            ;;

        -r | --release)
            RELEASE_SET=true
            DEBUG_SET=false
            ;;

        --staticlibs)
            STATIC_SET=true
            SHARED_SET=false
            ;;

        --sharedlibs)
            SHARED_SET=true
            STATIC_SET=false
            ;;

    esac

    # We're done with the current argument, move to the next.
    shift
done

BUILD_OPTIONS=

if [ $DEBUG_SET == true ]; then
    BUILD_OPTIONS+='-DCMAKE_BUILD_TYPE=Debug'
elif [ $RELEASE_SET == true ]; then
    BUILD_OPTIONS+='-DCMAKE_BUILD_TYPE=Release'
fi

BUILD_OPTIONS+=' '

if [ $STATIC_SET == true ]; then
    BUILD_OPTIONS+='-DBUILD_SHARED_LIBS=OFF'
elif [ $SHARED_SET == true ]; then
    BUILD_OPTIONS+='-DBUILD_SHARED_LIBS=ON'
fi

# Generate the makefile with cmake
cmake $BUILD_OPTIONS .
